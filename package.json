{
  "name": "himalaya-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "analyze": "vite-bundle-visualizer",
    "optimize:images": "node scripts/optimize-logo-new.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully'",
    "security": "npm audit fix --force",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "seo:audit": "lighthouse --output json --output-path ./lighthouse-report.json --chrome-flags=\"--headless\" https://krishihimalaya.com",
    "analyze:bundle": "vite-bundle-visualizer",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\""
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "framer-motion": "^12.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.1",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cssnano": "^7.0.7",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.4.31",
    "postcss-nesting": "^13.0.1",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.2",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.1.4"
  }
}
